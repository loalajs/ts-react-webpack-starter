{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "outDir": "../../dist/client",
    "rootDir": "./app",
    "pretty": true,
    "baseUrl": "./app",
    "paths": {
      "*": [
        "*"
      ]
    },
    "jsx": "react",
    "lib": ["es2015", "dom", "es2015.promise"]
  },
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ]
}
